{
  "name": "ulaunch-previewer",
  "version": "0.2.0",
  "description": "uLaunch Previewer",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "dist:darwin": "electron-builder --mac"
  },
  "author": "Pharuxtan",
  "homepage": "https://github.com/IcosaSwitch/uLaunch-Previewer#readme",
  "dependencies": {
    "ejs": "^2.6.1",
    "ejs-electron": "^2.0.3",
    "fs": "0.0.1-security",
    "howler": "^2.1.2",
    "html2canvas": "^1.0.0-rc.5",
    "https-proxy-agent": "^3.0.1",
    "jquery": "^3.4.1",
    "node-fetch": "^2.6.0",
    "path": "^0.12.7",
    "platform-folders": "^0.4.1",
    "url": "^0.11.0"
  },
  "devDependencies": {
    "electron": "^7.1.2",
    "electron-builder": "^21.2.0"
  },
  "build": {
    "appId": "ulaunch-previewer",
    "productName": "uLaunch Previewer",
    "artifactName": "uLaunch-Previewer-${version}.${ext}",
    "directories": {
      "buildResources": "build",
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis"
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.utilities",
      "icon": "build/icon.icns"
    },
    "dmg": {
      "background": "build/background.png",
      "icon": "build/icon.icns",
      "iconTextSize": 15,
      "iconSize": 100,
      "window": {
        "width": 541,
        "height": 400
      }
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Pharuxtan",
      "vendor": "uLaunch Previewer",
      "synopsis": "uLaunch Previewer",
      "description": "uLaunch Previewer",
      "category": "Utility"
    },
    "files": [
      "!{dist,dev-app-update.yml,screenshot,package-lock.json,screenshot,README.md,.gitignore}"
    ],
    "compression": "maximum",
    "asar": true
  }
}
